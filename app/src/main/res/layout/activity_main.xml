<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.afrizal.afrizalrpp_1202151232_modul1.MainActivity">

    <TextView
        android:id="@+id/textmakanmalam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makan Malam"
        android:layout_marginTop="20dp"
        android:textSize="26dp"
        android:textColor="#000"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textdenganmilea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="17dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="125dp"
        android:text="Dengan Milea" />

    <EditText
        android:id="@+id/textMakan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Nama Menu"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/textPorsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Jumlah Porsi"
        android:inputType="number" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_eatbus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="44dp"
            android:text="Eatbus"
            android:onClick="eatbus"
            android:textColor="#fff"
            android:background="@color/colorAccent"
            tools:layout_editor_absoluteX="51dp"
            tools:layout_editor_absoluteY="260dp" />



        <Button
            android:id="@+id/button_abnormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:textColor="#fff"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="50dp"
            android:text="Abnormal"
            android:onClick="abnormal"
            tools:layout_editor_absoluteX="236dp"
            tools:layout_editor_absoluteY="267dp" />


    </LinearLayout>
</LinearLayout>